{
  "name": "@apps/api",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:watch": "pnpm build --watch",
    "check-types": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "clean": "rm -rf dist",
    "lint": "eslint src/ --max-warnings 0",
    "test": "vitest run"
  },
  "dependencies": {
    "@packages/config": "workspace:*",
    "@packages/logger": "workspace:*",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "5.2.1",
    "morgan": "^1.10.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@packages/vitest-presets": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.0",
    "supertest": "^7.1.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
