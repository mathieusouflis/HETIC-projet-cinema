{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^build", "^check-types"]
    },

    "build:watch": {
    },

    "dev": {
      "with": ["build:watch"],
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
